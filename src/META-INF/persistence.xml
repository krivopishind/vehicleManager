<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">	
<persistence-unit name="vehicleManager" transaction-type="RESOURCE_LOCAL">
	<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<class>krivopishin.vehicleManager.dao.CurrencyType</class>
		<class>krivopishin.vehicleManager.dao.FuelRefill</class>
		<class>krivopishin.vehicleManager.dao.FuelType</class>
		<class>krivopishin.vehicleManager.dao.Vehicle</class>
		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:sqlite:D:\WORKSPACE\vehicleManager\db\vehicleManager.db"/>
			<property name="javax.persistence.jdbc.user" value=""/>
			<property name="javax.persistence.jdbc.password" value=""/>
			<property name="javax.persistence.jdbc.driver" value="org.sqlite.JDBC"/>
			<property name="hibernate.default_schema" value="vehicleManager"/>
			<property name="eclipselink.target-database" value="Auto"/>
			<property name="eclipselink.weaving" value="static"/>
			<property name="eclipselink.weaving.lazy" value="true"/>
		</properties>
	</persistence-unit>
</persistence>
